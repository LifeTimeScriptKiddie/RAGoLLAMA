# Production Environment Configuration
# Copy this to .env for production deployment

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_ORIGINS=*

# Open WebUI Configuration
WEBUI_AUTH=True
WEBUI_NAME=Financial Advisor Suite
WEBUI_SECRET_KEY=your-secret-key-here-change-this-in-production
DEFAULT_USER_ROLE=user

# Financial Advisor Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Security Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Optional: Stock API Key (for live financial data)
ALPHA_VANTAGE_API_KEY=your-api-key-here

# Optional: Authentication Settings
# JWT_SECRET=your-jwt-secret-here
# SESSION_SECRET=your-session-secret-here

# Optional: Database Configuration (if using external DB)
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Resource Limits
MAX_UPLOAD_SIZE=100MB
MAX_DOCUMENTS=1000

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASSWORD=your-password